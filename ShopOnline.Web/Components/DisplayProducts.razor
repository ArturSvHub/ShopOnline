@foreach (var item in Products)
{
    <div class="col-md-3 mb-2">
        <a href=@($"/Product/{item.Id}")>
            <div class="card">
                <img class="img-thumbnail" src="@item.ImageURL">
                <div class="card-body">
                    <h5 class="card-title">
                        @item.Name
                    </h5>
                    <p class="card-text">
                        <b>@item.RetailPrice?.ToString("C",CultureInfo.CreateSpecificCulture("ru-RU"))</b>
                    </p>
                </div>
            </div>
        </a>
    </div>
}
